# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Security
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d
API_KEY_HEADER=X-API-Key

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=azdevops_mcp
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PREFIX=azdevops_mcp:

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_openai_org_id_here
OPENAI_MODEL=gpt-4

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
USE_AZURE_OPENAI=false

# Azure DevOps
AZURE_DEVOPS_PAT=your_personal_access_token
AZURE_DEVOPS_ORGANIZATION=your_organization

# Logging
LOG_LEVEL=info
LOG_FILE=logs/server.log

# Service Timeouts (ms)
TASK_PROCESSING_TIMEOUT=3600000
CODE_GENERATION_TIMEOUT=600000
REPOSITORY_OPERATION_TIMEOUT=300000

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true